<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.safdar.medicento.salesappmedicento">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_new_full"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_new_full_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ConfirmOrderActivity"
            android:label="Confirm Order"
            android:parentActivityName=".PlaceOrdersActivity" />
        <activity
            android:name=".NewPharmacy"
            android:label="Add new Pharmacy"
            android:parentActivityName=".PlaceOrdersActivity" />
        <activity
            android:name=".SalesPersonDetails"
            android:parentActivityName=".PlaceOrdersActivity" />
        <activity
            android:name=".NewArea"
            android:label="Add new Area"
            android:parentActivityName=".PlaceOrdersActivity" />
        <activity
            android:name=".PlaceOrdersActivity"
            android:label="Place Order"
            android:launchMode="singleInstance"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OrderConfirmedActivity"
            android:parentActivityName=".PlaceOrdersActivity" />
        <activity android:name=".SignInActivity"/>
    </application>

</manifest>